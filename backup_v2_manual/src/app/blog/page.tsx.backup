"use client";

import { useState, useEffect } from 'react';
import { Sparkles, Copy, Check, Settings, Eye, EyeOff } from 'lucide-react';

// API Key 설정 컴포넌트 (모달 등을 사용할 수 있지만, 단순화를 위해 인라인으로 유지)
const ApiKeySettings = ({ apiKey, saveApiKey, showApiKey, setShowApiKey }: {
    apiKey: string;
    saveApiKey: (key: string) => void;
    showApiKey: boolean;
    setShowApiKey: (show: boolean) => void;
}) => (
    <div className="p-4 bg-gray-50 rounded-xl border border-gray-200 shadow-inner">
        <div className="flex items-center gap-2 mb-2">
            <Settings className="w-4 h-4 text-gray-600" />
            <label className="text-xs font-semibold text-gray-700">Gemini API Key</label>
            {apiKey && <span className="ml-auto text-xs text-green-600 font-medium">✅ 연결됨</span>}
        </div>
        <div className="relative">
            <input
                type={showApiKey ? "text" : "password"}
                value={apiKey}
                onChange={(e) => saveApiKey(e.target.value)}
                placeholder="AIza..."
                className="w-full px-3 py-2 pr-10 text-sm border border-gray-300 rounded-lg focus:border-blue-500 focus:outline-none transition-colors font-mono"
            />
            <button
                onClick={() => setShowApiKey(!showApiKey)}
                className="absolute right-2 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 p-1"
            >
                {showApiKey ? <EyeOff className="w-4 h-4" /> : <Eye className="w-4 h-4" />}
            </button>
        </div>
        <p className="mt-1 text-xs text-gray-500">
            <a href="https://aistudio.google.com/app/apikey" target="_blank" className="text-blue-600 hover:underline">
                API Key 발급받기 →
            </a>
        </p>
    </div>
);


export default function BlogPage() {
    const [apiKey, setApiKey] = useState('');
    const [showApiKey, setShowApiKey] = useState(false);
    const [title, setTitle] = useState('');
    const [keyword, setKeyword] = useState('');
    const [content, setContent] = useState('');
    const [keywordCount, setKeywordCount] = useState(0);
    const [charCount, setCharCount] = useState(0);
    const [loading, setLoading] = useState(false);
    const [error, setError] = useState('');
    const [copied, setCopied] = useState(false);

    useEffect(() => {
        const saved = localStorage.getItem('gemini_api_key');
        if (saved) setApiKey(saved);
    }, []);

    const saveApiKey = (key: string) => {
        setApiKey(key);
        localStorage.setItem('gemini_api_key', key);
    };

    const handleGenerate = async () => {
        setError('');
        setContent('');

        if (!apiKey.trim()) {
            setError('API Key를 입력해주세요.');
            return;
        }

        if (!title.trim()) {
            setError('제목을 입력해주세요.');
            return;
        }

        if (!keyword.trim()) {
            setError('핵심 키워드를 입력해주세요.');
            return;
        }

        setLoading(true);

        try {
            const res = await fetch('/api/blog', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ apiKey, title, keyword }),
            });

            const data = await res.json();

            if (data.content) {
                setContent(data.content);
                setKeywordCount(data.keywordCount);
                setCharCount(data.charCount);
            } else {
                setError(data.error || '글 생성에 실패했습니다.');
            }
        } catch {
            setError('네트워크 오류가 발생했습니다.');
        } finally {
            setLoading(false);
        }
    };

    const handleCopy = () => {
        navigator.clipboard.writeText(content);
        setCopied(true);
        setTimeout(() => setCopied(false), 2000);
    };

    return (
        <div className="min-h-screen bg-gray-100 flex items-start pt-10 justify-center p-4">
            <div className="w-full max-w-3xl space-y-6">

                {/* Header */}
                <div className="text-center space-y-2">
                    <div className="inline-flex items-center justify-center w-12 h-12 bg-blue-50 rounded-full mb-1">
                        <Sparkles className="w-6 h-6 text-blue-600" />
                    </div>
                    <h1 className="text-3xl font-bold text-gray-900">AI 블로그 포스팅 생성</h1>
                    <p className="text-gray-600">Gemini를 사용하여 SEO에 최적화된 1500자 글을 생성합니다.</p>
                </div>

                {/* API Key Settings Card (간소화) */}
                <ApiKeySettings
                    apiKey={apiKey}
                    saveApiKey={saveApiKey}
                    showApiKey={showApiKey}
                    setShowApiKey={setShowApiKey}
                />

                {/* Unified Input and Action Area (Gemini Style) */}
                <div className="bg-white rounded-3xl shadow-xl border border-gray-200 p-6 space-y-4">

                    {/* Title Input */}
                    <div className="space-y-1">
                        <label className="block text-sm font-medium text-gray-700">제목</label>
                        <input
                            type="text"
                            value={title}
                            onChange={(e) => setTitle(e.target.value)}
                            placeholder="블로그 글의 주제가 될 제목을 입력하세요"
                            className="w-full px-4 py-3 text-base border-2 border-gray-100 rounded-xl focus:border-blue-500 focus:ring-blue-500 focus:outline-none transition-colors"
                        />
                    </div>

                    {/* Keyword Input */}
                    <div className="space-y-1">
                        <label className="block text-sm font-medium text-gray-700">
                            핵심 키워드 <span className="ml-1 text-xs font-normal text-gray-500">(글에 10회 반복 목표)</span>
                        </label>
                        <input
                            type="text"
                            value={keyword}
                            onChange={(e) => setKeyword(e.target.value)}
                            placeholder="예: 맛집, Next.js 개발, 투자 전략"
                            className="w-full px-4 py-3 text-base border-2 border-gray-100 rounded-xl focus:border-blue-500 focus:ring-blue-500 focus:outline-none transition-colors"
                        />
                    </div>

                    {/* Error Message */}
                    {error && (
                        <div className="p-3 bg-red-50 border border-red-200 rounded-xl">
                            <p className="text-sm text-red-700 font-medium">{error}</p>
                        </div>
                    )}

                    {/* Generate Button (Right Aligned) */}
                    <div className="flex justify-end pt-2">
                        <button
                            onClick={handleGenerate}
                            disabled={loading || !apiKey.trim() || !title.trim() || !keyword.trim()}
                            className={`px-6 py-3 rounded-full font-medium text-white transition-all flex items-center gap-2 ${loading || !apiKey.trim() || !title.trim() || !keyword.trim()
                                    ? 'bg-gray-400 cursor-not-allowed'
                                    : 'bg-blue-600 hover:bg-blue-700 shadow-md shadow-blue-200'
                                }`}
                        >
                            {loading ? (
                                <div className="w-4 h-4 border-2 border-white/30 border-t-white rounded-full animate-spin" />
                            ) : (
                                <Sparkles className="w-4 h-4" />
                            )}
                            {loading ? '생성 중...' : '글 생성하기'}
                        </button>
                    </div>
                </div>

                {/* Result Card (Minimalist Style) */}
                {content && (
                    <div className="bg-white rounded-3xl shadow-xl border border-gray-200 p-6 space-y-4 animate-in fade-in slide-in-from-bottom-4 duration-700">

                        {/* Stats and Copy (Chip Style) */}
                        <div className="flex flex-wrap items-center justify-between gap-3 pb-4 border-b border-gray-100">

                            <div className="flex flex-wrap gap-2 text-sm">
                                {/* Keyword Count Chip */}
                                <span className={`px-3 py-1 rounded-full text-xs font-medium ${keywordCount === 10 ? 'bg-green-100 text-green-700' : 'bg-orange-100 text-orange-700'}`}>
                                    키워드 "{keyword}" {keywordCount}회
                                </span>
                                {/* Char Count Chip */}
                                <span className={`px-3 py-1 rounded-full text-xs font-medium ${Math.abs(charCount - 1500) < 100 ? 'bg-blue-100 text-blue-700' : 'bg-red-100 text-red-700'}`}>
                                    글자 수 {charCount}자 (목표 1500자)
                                </span>
                            </div>

                            {/* Copy Button */}
                            <button
                                onClick={handleCopy}
                                className="flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-gray-600 hover:bg-gray-50 rounded-full transition-colors"
                            >
                                {copied ? (
                                    <>
                                        <Check className="w-4 h-4 text-green-500" />
                                        복사됨
                                    </>
                                ) : (
                                    <>
                                        <Copy className="w-4 h-4" />
                                        복사하기
                                    </>
                                )}
                            </button>
                        </div>

                        {/* Content Area with Scroll */}
                        <div className="max-h-[60vh] overflow-y-auto pr-2">
                            <div className="whitespace-pre-wrap text-gray-800 leading-relaxed">
                                {content}
                            </div>
                        </div>
                    </div>
                )}
            </div>
        </div>
    );
}
